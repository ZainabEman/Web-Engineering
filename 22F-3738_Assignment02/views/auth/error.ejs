    <style>
        body {
            background: white;
            font-family: 'Fredoka One', cursive;
            margin: 0;
            padding: 0;
        }

        .error-wrapper {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 2rem;
        }

        .error-heading {
            font-size: 5rem;
            color: #ff3c6f;
            text-shadow: 2px 2px #fff;
            animation: popUp 1s ease;
        }

        .error-subtext {
            font-size: 2rem;
            color: #222;
            margin-bottom: 2rem;
        }

        .error-gif {
            width: 650px;
            max-width: 90vw;
        }

        .error-message {
            font-size: 1.5rem;
            margin-top: 1.5rem;
            color: #333;
        }

        .btn-home {
            margin-top: 2rem;
            font-size: 1.2rem;
            padding: 0.8rem 2rem;
            border-radius: 50px;
            background-color: #ff3c6f;
            border: none;
            color: white;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .btn-home:hover {
            background-color: #ff1557;
            transform: scale(1.05);
        }

        @keyframes popUp {
            0% { transform: scale(0.8); opacity: 0; }
            100% { transform: scale(1); opacity: 1; }
        }
    </style>
</head>
